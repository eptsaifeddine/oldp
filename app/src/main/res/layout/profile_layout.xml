<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vpdev.ajp.ajp.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lineair_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="15dp"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="12dp"
            android:text="El Zamil(a) :"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="12dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TextView_name"
            />
        <TextView
            android:layout_margin="12dp"
            android:text="Nombre de sorties :"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="12dp"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TextView_nombre_de_sorties"
            />
        <TextView
            android:layout_margin="12dp"
            android:text="Depenses"
            android:textColor="@color/colorAccent"

            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="12dp"
            android:id="@+id/TextView_depenses"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"

            android:textSize="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Button_ajouter_une_sortie"

            android:text="Ajouter une sortie"


            />





    </LinearLayout>



</android.support.constraint.ConstraintLayout>
